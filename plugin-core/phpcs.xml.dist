<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Canil Core">
	<description>A custom set of rules to check for WordPress coding standards in Canil Core plugin.</description>

	<!-- What to scan -->
	<file>./includes</file>
	<file>./canil-core.php</file>

	<!-- Exclude patterns -->
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/tests/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>
	<exclude-pattern>/assets-admin/</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff and progress -->
	<arg name="basepath" value="."/><!-- Strip the file paths down to the relevant bit -->
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/><!-- Enables parallel processing when available for faster results. -->

	<!-- Rules: Check PHP version compatibility -->
	<config name="testVersion" value="8.1-"/>

	<!-- Rules: WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Exclude file naming rules since we use PSR-4 autoloading -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
		
		<!-- Exclude nonce verification for REST API controllers (handled by WP REST API) -->
		<exclude name="WordPress.Security.NonceVerification"/>
		
		<!-- Allow short ternary when intentional -->
		<exclude name="Universal.Operators.DisallowShortTernary"/>
		
		<!-- Suppress false positives for wpdb->prepare -->
		<exclude name="WordPress.DB.PreparedSQL.NotPrepared"/>
		<exclude name="WordPress.DB.PreparedSQL.InterpolatedNotPrepared"/>
		<exclude name="WordPress.DB.PreparedSQLPlaceholders.UnsupportedIdentifierPlaceholder"/>
		<exclude name="WordPress.DB.PreparedSQLPlaceholders.ReplacementsWrongNumber"/>
		
		<!-- Allow exception messages without escaping -->
		<exclude name="WordPress.Security.EscapeOutput.ExceptionNotEscaped"/>
		
		<!-- Allow reserved keywords as parameter names (common in PHP) -->
		<exclude name="Universal.NamingConventions.NoReservedKeywordParameterNames"/>
		
		<!-- Allow error_log for debugging in development -->
		<exclude name="WordPress.PHP.DevelopmentFunctions.error_log_error_log"/>
		
		<!-- Allow unused function parameters (needed for interface compatibility) -->
		<exclude name="Generic.CodeAnalysis.UnusedFunctionParameter"/>
	</rule>

	<!-- Additional rules -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="canil-core"/>
			</property>
		</properties>
	</rule>

	<!-- Register custom capabilities -->
	<rule ref="WordPress.WP.Capabilities">
		<properties>
			<property name="custom_capabilities" type="array">
				<element value="manage_kennel"/>
				<element value="manage_dogs"/>
				<element value="manage_litters"/>
				<element value="manage_puppies"/>
				<element value="manage_people"/>
				<element value="view_reports"/>
				<element value="manage_settings"/>
			</property>
		</properties>
	</rule>

	<!-- Minimum WP version -->
	<config name="minimum_supported_wp_version" value="6.0"/>

</ruleset>
