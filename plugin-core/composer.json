{
	"name": "richardprobst/canil-core",
	"description": "Sistema de gestão de canil de criação - Core Plugin (SaaS Multi-tenant)",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Richard Probst"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=8.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.0",
		"wp-coding-standards/wpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"CanilCore\\": "includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CanilCore\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"lint": "phpcs --standard=WordPress includes/ --extensions=php",
		"lint:fix": "phpcbf --standard=WordPress includes/ --extensions=php",
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-html coverage"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
